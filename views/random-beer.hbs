<div>

  {{#each randomBeer}}
    <div class="beer-card big-card">
        <div id="image">
        <img src='{{this.image_url}}'>
        </div>
        <div class="flexy">
            <h1>{{this.name}}</h1>
            <p class="tagline">"{{this.tagline}}"</p>
            <p class="description">{{this.description}}</p>
        </div>

    </div>
    {{/each}}
</div>